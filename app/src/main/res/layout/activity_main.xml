<?xml version="1.0" encoding="utf-8"?>
   <ScrollView
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <com.suphu.demo.widget.PieView
             android:id="@+id/pie_view"
             android:layout_width="200dp"
             android:layout_height="200dp"
             android:padding="10dp"
             android:background="#ccc"
             android:layout_gravity="center"/>


         <com.suphu.demo.widget.MyTestView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:text_value="hello,view"
             app:text_size="15sp"
             app:text_color="#666"
             android:padding="10dp" />



         <com.suphu.demo.widget.TextDrawableView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:textdrawable_color="#333"
             app:textdrawable_size="16sp"
             app:textdrawable_value="22222"
             app:textdrawable_img="@mipmap/ic_launcher"
             />


         <com.suphu.demo.widget.CircleProgressView
             android:layout_width="100dp"
             android:layout_height="100dp"
             app:progress_width="5dp"
             app:progress_text_size="15sp"
             />

         <com.suphu.demo.widget.VolumeView
             android:layout_width="100dp"
             android:layout_height="100dp"
             app:volume_bitmap="@mipmap/ic_launcher"
             />

         <com.suphu.demo.widget.VolumeHorizontalView
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:padding="10dp"
             app:volume_horizontal_bitmap="@mipmap/ic_launcher"/>


         <com.suphu.demo.widget.TestViewDragHelper
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"/>
         </com.suphu.demo.widget.TestViewDragHelper>


         <Button
             android:layout_width="100dp"
             android:layout_height="50dp"
             android:text="start DragHelper"
             android:onClick="startLeftDragHelper"/>

      </LinearLayout>

   </ScrollView>



